---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import Sidebar from '@/components/SidebarU.astro';
import '@/styles/dashboard.css';
---

<DashboardLayout>
  <Sidebar slot="sidebar" activeSection="/solicitar-certificado" />
  <main class="dashboard-main">
    <div class="flex items-center gap-3 mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h1 class="dashboard-title">Solicitar Certificado</h1>
        <p class="dashboard-subtitle">Completa este formulario para generar tu certificado digital.</p>
      </div>
    </div>

    <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-100 max-w-3xl">
      <!-- Progreso -->
      <div class="mb-6">
        <div class="flex justify-between text-sm text-gray-500 mb-1">
          <span>Paso 1 de 2</span>
          <span>50% completado</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div class="bg-blue-600 h-2 rounded-full transition-all duration-500" style="width: 50%"></div>
        </div>
      </div>

      <form id="certificateForm" class="space-y-8">
        <!-- Datos del estudiante -->
        <fieldset>
          <legend class="text-lg font-semibold text-gray-700 mb-4">üßë‚Äçüéì Informaci√≥n del Estudiante</legend>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="nombre" class="block text-sm font-medium text-gray-700 mb-2">Nombre completo*</label>
              <input type="text" id="nombre" name="nombre" required class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-blue-500 focus:outline-none" placeholder="Ej. Laura S√°nchez" />
            </div>
            <div>
              <label for="documento" class="block text-sm font-medium text-gray-700 mb-2">Documento de identidad*</label>
              <input type="text" id="documento" name="documento" required class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-blue-500 focus:outline-none" placeholder="Ej. 10111213Z" />
            </div>
          </div>
        </fieldset>
        
        <fieldset>
          <legend class="text-lg font-semibold text-gray-700 mb-4">üìö Curso a Certificar</legend>
          <div class="space-y-4">
            <div>
              <label for="curso" class="block text-sm font-medium text-gray-700 mb-2">Curso*</label>
              <select id="curso" name="curso" required class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-blue-500 focus:outline-none bg-white">
                <option value="" disabled selected>Selecciona un curso</option>
                <option>Marketing Digital Avanzado</option>
                <option>Programaci√≥n Full Stack</option>
                <option>Dise√±o UX/UI Profesional</option>
                <option>Ciencia de Datos</option>
                <option>Blockchain Fundamentals</option>
              </select>
            </div>
            <div>
              <label for="motivo" class="block text-sm font-medium text-gray-700 mb-2">Motivo de la solicitud</label>
              <textarea id="motivo" name="motivo" rows="4" class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-blue-500 focus:outline-none" placeholder="¬øPara qu√© necesitas el certificado? (Ej. aplicar a un trabajo, beca, portafolio...)"></textarea>
              <p class="text-xs text-gray-500 mt-1">Este campo es opcional.</p>
            </div>
          </div>
        </fieldset>

        <fieldset>
          <legend class="text-lg font-semibold text-gray-700 mb-4">üì© Informaci√≥n de Contacto (opcional)</legend>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="correo" class="block text-sm font-medium text-gray-700 mb-2">Correo electr√≥nico</label>
              <input type="email" id="correo" name="correo" class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-blue-500 focus:outline-none" placeholder="Ej. usuario@email.com" />
            </div>
            <div>
              <label for="telefono" class="block text-sm font-medium text-gray-700 mb-2">Tel√©fono de contacto</label>
              <input type="tel" id="telefono" name="telefono" class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-blue-500 focus:outline-none" placeholder="Opcional" />
            </div>
          </div>
        </fieldset>

        <div class="flex items-start">
          <input id="terminos" name="terminos" type="checkbox" required class="mt-1 h-4 w-4 text-blue-600 border-gray-300 rounded" />
          <div class="ml-3 text-sm">
            <label for="terminos" class="font-medium text-gray-700">
              Acepto los <a href="#" class="text-blue-600 hover:underline">t√©rminos y condiciones</a>
            </label>
            <p class="text-gray-500">Verificaremos tus datos acad√©micos antes de emitir el certificado.</p>
          </div>
        </div>

        <div class="pt-2">
          <button type="submit" class="w-full md:w-auto bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold shadow-md transition hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            üöÄ Enviar Solicitud
          </button>
        </div>
      </form>
    </div>
  </main>
</DashboardLayout>
