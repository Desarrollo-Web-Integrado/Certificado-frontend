---

const { columns, data } = Astro.props;
---

<table class="products-table" role="table">
  <thead>
    <tr>
      {columns.map(col => (
        <th scope="col">{col}</th>
      ))}
    </tr>
  </thead>
  <tbody>
    {data.map(row => (
      <tr>
        {columns.map(col => (
          <td data-column={col.toLowerCase()}>{row[col.toLowerCase()]}</td>
        ))}
      </tr>
    ))}
  </tbody>
</table>

<style is:global>

  .products-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    background: var(--color-surface);
    border-radius: var(--border-radius-md);
    box-shadow: var(--color-card-shadow);
    overflow: hidden;
    margin: var(--spacing-lg) 0;
  }

  .products-table thead {
    position: relative;
  }

  .products-table thead::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    background: var(--color-border);
  }

  .products-table th {
    background: var(--color-surface);
    color: var(--color-accent);
    font-weight: 600;
    padding: var(--spacing-md);
    text-align: left;
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
  }

  .products-table th:not(:last-child)::after {
    content: '';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    height: 60%;
    width: 1px;
    background: var(--color-border);
  }

  .products-table td {
    padding: var(--spacing-md);
    color: var(--color-primary);
    border-bottom: 1px solid var(--color-border);
    transition: var(--transition-base);
  }

  .products-table tr:last-child td {
    border-bottom: none;
  }

  .products-table tr:hover td {
    background: var(--color-hover);
  }

  .products-table td[data-column="cantidad"] {
    font-weight: 500;
    position: relative;
    padding-left: var(--spacing-lg);
  }

  .products-table td[data-column="cantidad"]::before {
    content: '';
    position: absolute;
    left: var(--spacing-md);
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--color-accent);
  }

  .products-table td[data-column="ventas"] {
    font-weight: 600;
    color: var(--color-success);
  }

  /* Efecto hover para filas */
  .products-table tr {
    transition: var(--transition-base);
  }

  .products-table tr:hover {
    transform: translateX(2px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .products-table {
      border-radius: var(--border-radius-sm);
    }
    
    .products-table th,
    .products-table td {
      padding: var(--spacing-sm) var(--spacing-md);
    }
    
    .products-table td[data-column="cantidad"] {
      padding-left: var(--spacing-md);
    }
    
    .products-table td[data-column="cantidad"]::before {
      display: none;
    }
  }
</style>